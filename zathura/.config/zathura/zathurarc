# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01

#zoom settings
set zoom-min 10
set guioptions "s"

# Colors and font

set font "dina 9"

# Base16 Superfluous Dark
# Author: Ian Mancini (https://github.com/ianmethyst)

set default-bg                  "#0A0A0D"
set default-fg                  "#14141A"

set statusbar-fg                "#747A7A"
set statusbar-bg                "#25252E"

set inputbar-bg                 "#0A0A0D"
set inputbar-fg                 "#CED9D9"

set notification-bg             "#0A0A0D"
set notification-fg             "#CED9D9"

set notification-error-bg       "#0A0A0D"
set notification-error-fg       "#B26F7A"

set notification-warning-bg     "#0A0A0D"
set notification-warning-fg     "#B26F7A"

set highlight-color             "#C0AE66"
set highlight-active-color      "#7086B2"

set completion-bg               "#14141A"
set completion-fg               "#7086B2"

set completion-highlight-fg     "#CED9D9"
set completion-highlight-bg     "#7086B2"

set recolor-lightcolor          "#0A0A0D"
set recolor-darkcolor           "#BDC7C7"

set recolor                     "false"
set recolor-keephue             "false"


set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

set selection-clipboard clipboard
