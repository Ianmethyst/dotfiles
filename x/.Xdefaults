#include ".Xresources.d/colors/dracula"

!!!!!!!!!
! URxvt !
!!!!!!!!!

! General settings
URxvt*saveline:         15000

! Disable scrollbar
URxvt.scrollBar: 0

! Cursor blink
URxvt.cursorBlink: 1

!Geometry
URxvt.geometry: 		92x16


! Enables copy/paste with Ctrl-Shift-C/V
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.perl-ext-common: default,clipboard
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! Font
URxvt.font: xft:Iosevka Nerd Font Mono:size=11, xft:Symbola:size=13

! Icon
URxvt.iconFile:    /usr/share/icons/Papirus-Adapta/64x64/apps/terminal.svg

URxvt.letterSpace: 0
URxvt*lineSpace: 0

Xft.autohint: 0
Xft.dpi: 92
Xft.antialias: 1
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

! Clickable links
URxvt.url-launcher: /usr/bin/firefox

! Border 
URxvt.internalBorder:  18

! Transparency

! fake
!urxvt*transparent: true
!urxvt*shading: 10

urxvt*depth: 32
! URxvt.background: [95]#09090d

! Map CTRL + arrow keys
URxvt.keysym.Control-Up:   \033[1;5A
URxvt.keysym.Control-Down:    \033[1;5B
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C

! Rofi
! Enable the extended coloring options
rofi.color-enabled: true

!                  bg       border   separator
rofi.color-window: #2e3440, #d8dee9, #d8dee9

!                  bg       fg       bg-alt   hl-bg    hl-fg
rofi.color-normal: #2e3440, #d8dee9, #2e3440, #4c566a, #d8dee9
rofi.color-active: #d8dee9, #2e3440, #d8dee9, #d8dee9, #4c566a
rofi.color-urgent: #d8dee9, #2e3440, #d8dee9, #d8dee9, #4c566a

rofi.terminal:	    urxvt	
rofi.ssh-command:	{terminal} -e "{ssh-client} {host}"
rofi.run-shell-command:	{terminal} -e "{cmd}"
rofi.hide-scrollbar: true
rofi.font: Iosevka Nerd Font Mono 11
rofi.separator-style: none
rofi.scrollbar-width: 0
rofi.location: 1
rofi.yoffset: 42
rofi.xoffset: 24
rofi.padding: 18
rofi.lines: 12 
rofi.width: 400
rofi.bw: 0
