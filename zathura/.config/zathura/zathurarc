# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01

#zoom settings
set zoom-min 10
set guioptions "s"

# Colors and font

set font "Iosevka Nerd Font Mono 11"

# Base16 Superfluous Dark
# Author: Ian Mancini (https://github.com/ianmethyst)

set default-bg                  "#282A36"
set default-fg                  "#F8F8F2"

set statusbar-bg                "#424450"
set statusbar-fg                "#F8F8F2"

set inputbar-bg                 "#282A36"
set inputbar-fg                 "#F8F8F2"

set notification-bg             "#8BE9FD"
set notification-fg             "#282A36"

set notification-error-bg       "#FF5555"
set notification-error-fg       "#F8F8F2"

set notification-warning-bg     "#F1FA8C"
set notification-warning-fg     "#282A36"

set highlight-color             "#F1FA8C"
set highlight-active-color      "#50FA7B"

set completion-bg               "#282A36"
set completion-fg               "#F8F8F2"

set completion-highlight-bg     "#50FA7B"
set completion-highlight-fg     "#282A36"

set recolor-lightcolor          "#F8F8F2"
set recolor-darkcolor           "#282A36"

set recolor                     "false"
set recolor-keephue             "false"


set render-loading "false"
set scroll-step 50
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

set selection-clipboard clipboard
