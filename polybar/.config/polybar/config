[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color0}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color8}
red = ${xrdb:color1}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}

[settings]
screenchange-reload = true
;throttle-output-for = 10
;throttle-output = 5
;throttle-input-for = 40

;compositing-background = over
;compositing-background = screen
;compositing-foreground = xor
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 8
margin-bottom = 8

[bar/top]
enable-ipc = true
monitor = ${env:MONITOR:eDP-1}
override-redirect = false
width = 100%
height = 28
;radius = 5.0
;fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
padding-left = 1
padding-right = 1

font-0 = M+ 1mn:pixelsize=9.01;1

modules-left = i3 window 
modules-center = mpd
modules-right = volume wifi battery date xkeyboard 

tray-position = right
tray-background = ${colors.background}
tray-transparent = false
tray-padding = 0
tray-margin = 0
tray-maxsize = 16
tray-detached = false
tray-offset-x = 0
wm-restack = i3

;dim-value = 0.2

[module/empty]
type = custom/script

[module/window]
type = internal/xwindow
label = " |  %title%"
label-maxlen = 30 

[module/i3]
type = internal/i3
index-sort = true
pin-workspaces = false
wrapping-scroll = true
;reverse-scroll = false
;enable-scroll = false

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 1
label-mode-background = ${colors.yellow}
label-mode-foreground = ${colors.background}

;label-focused = %icon%
label-focused = %name%
label-focused-padding= 1
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground}
label-focused-underline = ${colors.blue}

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-default = 

;label-unfocused = %icon%
label-unfocused = %name%
label-unfocused-padding= 1
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.background}

;label-urgent = %icon%!
label-urgent = %name%!
label-urgent-padding= 1
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.background}

;label-visible = %icon%
label-visible = %name%
label-visible-padding= 1
label-visible-foreground = ${colors.foreground}
label-visible-background = ${colors.background-alt}
label-visible-underline = ${colors.green}


[module/wifi]
type = internal/network
interface = wlp3s0 
interval = 3.0
;udspeed-minwidth = 0

format-connected = "<ramp-signal> <label-connected> "
label-connected = "%essid%"

format-disconnected = <label-disconnected>
label-disconnected = "not connected "
label-disconnected-foreground = ${colors.background-alt}

ramp-signal-0 = "%{F#BF616A}WLAN:%{F-}"
ramp-signal-1 = "%{F#e5c07b}WLAN:%{F-}"
ramp-signal-2 = "%{F#A3BE8C}WLAN:%{F-}"


[module/date]
type = internal/date
label = "%date% - %time% | "
date = %m/%d
time = %H:%M
interval = 5

[module/volume]
type = internal/volume

label-volume = "%{F#A3BE8C}VOL: %{F-}%percentage%% | "
label-muted = "%{F#BF616A}MUTE: %{F-}%percentage%% | "

[module/battery]
type = internal/battery
full-at =  97
time-format = %H:%M

format-charging = "| <animation-charging> <label-charging> | "
label-charging = "%percentage%%"
label-full = "%percentage%% "

format-discharging = "| <ramp-capacity> <label-discharging> | "
label-discharging = "%percentage%%"

format-full = "<label-full>| "
format-full-prefix = "| BAT: "
format-full-foreground = ${colors.green}

ramp-capacity-0 = "%{F#BF616A}BAT:%{F-}"
ramp-capacity-1 = "%{F#EBCB8B}BAT:%{F-}"
ramp-capacity-2 = "%{F#A3BE8C}BAT:%{F-}"

animation-charging-0 = "!BAT:"
animation-charging-1 = " BAT:"
animation-charging-foreground = ${colors.green}
animation-charging-framerate = 800


[module/mpd]
type = internal/mpd

;format-online = <label-time> %{F#88}|%{F-} <label-song> <icon-prev><icon-stop><toggle><icon-next> <icon-repeat><icon-random>
format-online = "<label-song>  <label-time>"
format-online-spacing = 0
format-online-padding = 3

format-offline = <label-offline>
format-offline-foreground = ${colors.background-alt}

label-offline = "mpd is off"

label-song-maxlen = 45
label-song-ellipsis = true

label-time-foreground = ${colors.foreground-alt}

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

icon-random = 
icon-repeat = 

toggle-on-foreground = ${colors.yellow}
toggle-off-foreground = #777

;bar-progress-width = 10
;bar-progress-indicator = 
;bar-progress-indicator-foreground = #bb
;bar-progress-fill = ─
;bar-progress-fill-foreground = #bb
;bar-progress-fill-font = 3
;bar-progress-empty = ─
;bar-progress-empty-foreground = #44
;bar-progress-empty-font = 3
;
[module/xkeyboard]
type = internal/xkeyboard

blacklist-0 = num lock
label-layout = "%layout%"

label-indicator-padding = 1
label-indicator-background = ${colors.red}
label-indicator-foreground = ${colors.background}

